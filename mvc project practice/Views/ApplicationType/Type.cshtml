@model List<mvc_project_practice.Models.ApplicationType>
<html>
<head>
    <title style="color:indigo">@ViewData["Title"] Record Lists</title>
</head>
<body>
    <div class="row pt-4">
        <div class="col-6">
            <h2 style="color:blue" class="text-primary">Record Lists </h2>
        </div>
        <div class="col-6">
            <a asp-controller="ApplicationType" asp-action="Create" style="text-align:right">
                <p style="color:white; background-color:blue;" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp; Create new Record List</p>
            </a>
        </div>
    </div>
    <br />
    @if (Model.Count > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>List</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AppName</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ApplicationType" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i> 
                                </a>
                                <a asp-controller="ApplicationType" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exist</p>
    }

</body>
</html>



